<div class="facet_count">
  <%unless @facets.nil?%>
  <h2>Facet Counts</h2>
  
      <div>
        <b>Names: </b><%=@facets['name']["total"]%>
        <ul>
          <%terms=@facets['name']["terms"]%>
          <% terms.each do |term| %>
            <li><%="#{term['term']}   (#{term['count']})"%></li>
          <%end%>
        </ul>

      </div>
      <div>
        <b>Countries: </b><%= @facets['country']["total"] %>
        <ul>
          <% terms=@facets['country']["terms"] %>
          <% terms.each do |term| %>
            <li><%="#{term['term']} (#{term['count']})" %></li>
          <% end %>
        </ul>

      </div>
  <%end%>

</div>
