<div>

  <h1>Listing Resumes</h1>
  <%=render :partial => "form"%>

  <hr>

<%=render :partial => "facets"%>
  <table class="resume_list">
    <thead>
      <tr>
        <th>Name</th>
        <th>Telephone Number</th>
        <th>Email</th>
      </tr>
    </thead>

    <tbody>
      <% @resumes.each do |resume| %>
        <tr>
          <td><%= resume.name %></td>
          <td><%= resume.telephone %></td>
          <td><%= resume.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>



